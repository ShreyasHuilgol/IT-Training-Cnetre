@model IEnumerable<FinalCaseStudy.Models.CourseDetail>
@{
    ViewBag.Title = "Index2";
}

<h2>Number of students in each course.</h2>
@if (!Model.Any())
{
    <p>No data uploaded yet.</p>
}
else
{
    <table class="table table-striped" border="0">
        <thead>
            <tr>
                <th scope="col">Course</th>
                <th scope="col">No. of students</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.GroupBy(u => u.course, (key, items) => new { Course = key, Cost = items.Sum(u => u.noofstd) }))
            {
                <tr>
                    <td scope="row">@Html.DisplayFor(_ => item.Course)</td>
                    <td scope="row">@Html.DisplayFor(_ => item.Cost)</td>
                </tr>
            }

        </tbody>
    </table>
}
<p><a class="btn btn-default" href="@Url.Action("Index5", "Reports")">&laquo; To Reports</a></p>